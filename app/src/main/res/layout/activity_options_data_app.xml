<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="12dp"
    android:background="@drawable/background_app"
    tools:context=".activities.OptionsDataApp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TitleOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/menu_options"
            android:textColor="@color/white"
            android:textSize="@dimen/headerTextSizeMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/BackToHome"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_logout"
            android:contentDescription="@string/back_to_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintTop_toTopOf="@id/TitleOptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:id="@+id/ImportDB"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/import_db"
                app:icon="@drawable/ic_import_db"
                app:iconGravity="top"
                app:iconSize="64dp"
                android:layout_margin="8dp"
                android:padding="16dp"
                app:cornerRadius="28dp"
                android:elevation="24dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:id="@+id/ExportDB"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/export_db"
                app:icon="@drawable/ic_export_db"
                app:iconGravity="top"
                app:iconSize="64dp"
                android:layout_margin="8dp"
                android:padding="16dp"
                app:cornerRadius="28dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/purple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/ExportDBQrReader"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/export_scan"
                app:icon="@drawable/ic_database_scan"
                app:iconGravity="top"
                app:iconSize="64dp"
                android:padding="16dp"
                app:cornerRadius="28dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>