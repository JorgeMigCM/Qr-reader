<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/deleteConstraintLayoutDetail"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDialog"
        android:background="@drawable/rounded_dialog"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/deleteBATitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿Borrar activo?"
            android:textSize="20dp"
            android:paddingTop="36dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toTopOf="@id/layoutDialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/deleteBATitle">
            <Button
                android:id="@+id/CleanDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/yellow"
                android:textAllCaps="false"
                android:textAppearance="@font/poppins"
                android:textSize="14dp"
                android:text="Si"/>
            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/purple"
                android:text="Cancelar"
                android:textAppearance="@font/poppins"
                android:textSize="14dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/imageClean"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_trash"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutDialog"
        app:layout_constraintBottom_toTopOf="@id/layoutDialog"/>

</androidx.constraintlayout.widget.ConstraintLayout>